<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>App-Signup</title>
  </head>
  <body>
    <div class="container">
      <div>

        <div>
          <a href="/login">Login</a>
          <a href="/signup">Signup</a>
        </div>

        <div>
          <form>
            <div class="form-group row">
                <input type="text" name="name" class="form-control col-4" id="enterName" placeholder="Name">
            </div>
            <div class="form-group row">
              <input type="email" name="username" class="form-control col-4" id="enterEmail" placeholder="Email">
            </div>
            <div class="form-group row">
                <input type="phone" name="phone" class="form-control col-4" id="enterPhone" placeholder="Phone number">
            </div>
            <div class="form-group row">
              <input type="password" name="password" class="form-control col-4" id="enterPass" placeholder="Password">
            </div>
            <div class="form-group row">
                <input type="password" name="confirmPassword" class="form-control col-4" id="enterPassAgain" placeholder="Confirm password">
            </div>
            <div class="form-group row">
              <button type="submit" class="btn btn-primary">Signup</button>
            </div>
          </form>  
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>